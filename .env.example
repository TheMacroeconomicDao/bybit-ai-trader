# ====================================
# TRADER AGENT - Environment Variables
# ====================================
# 
# ИНСТРУКЦИЯ:
# 1. Скопируйте этот файл в .env
# 2. Замените placeholder значения на реальные ключи
# 3. НИКОГДА не коммитьте .env в Git!
#
# Команда: cp .env.example .env
# ====================================

# Bybit API Credentials
# Получить: https://www.bybit.com/ → Account & Security → API Management
BYBIT_API_KEY=your_bybit_api_key_here
BYBIT_API_SECRET=your_bybit_api_secret_here
BYBIT_TESTNET=false

# OpenRouter API (REQUIRED for Qwen AI analysis)
# Get your key at: https://openrouter.ai/keys
# Format: sk-or-v1-xxxxx...
OPENROUTER_API_KEY=sk-or-v1-your-key-here

# Qwen Model Selection
QWEN_MODEL=qwen/qwen-turbo

# Telegram Bot (опционально)
# Получить: @BotFather в Telegram
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_chat_id_here

# ====================================
# Настройки торговли
# ====================================
MAX_RISK_PER_TRADE=0.02
MAX_CONCURRENT_POSITIONS=3
DAILY_LOSS_LIMIT=0.05
DEFAULT_LEVERAGE=2
MAX_LEVERAGE=5

# ====================================
# Cache Settings
# ====================================
ENABLE_CACHE=true
CACHE_TTL=300

# Cache TTL для разных типов данных (в секундах)
CACHE_TTL_MARKET_DATA=60      # 1 минута для рыночных данных
CACHE_TTL_ANALYSIS=180        # 3 минуты для технического анализа
CACHE_TTL_BTC=300             # 5 минут для BTC анализа
CACHE_TTL_OPPORTUNITIES=120   # 2 минуты для сканирования возможностей

# ====================================
# Debugging
# ====================================
DEBUG=false
LOG_LEVEL=INFO